<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/worldcup2030?useSSL=false&amp;serverTimezone=UTC&amp;allowPublicKeyRetrieval=true</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root123</property>

        <!-- Hibernate dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

        <!-- Connection pool settings -->
        <property name="hibernate.connection.pool_size">10</property>

        <!-- SQL logging -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Schema generation -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Entity mappings -->
        <mapping class="com.worldcup2030.entity.Stadium"/>
        <mapping class="com.worldcup2030.entity.Team"/>
        <mapping class="com.worldcup2030.entity.Match"/>
        <mapping class="com.worldcup2030.entity.Ticket"/>
        <mapping class="com.worldcup2030.entity.User"/>
        <mapping class="com.worldcup2030.entity.Booking"/>
    </session-factory>
</hibernate-configuration>
